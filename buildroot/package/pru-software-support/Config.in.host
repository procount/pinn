config BR2_PACKAGE_HOST_PRU_SOFTWARE_SUPPORT
	bool "host pru-software-support"
	depends on BR2_PACKAGE_HOST_TI_CGT_PRU_ARCH_SUPPORTS
	select BR2_PACKAGE_HOST_TI_CGT_PRU
